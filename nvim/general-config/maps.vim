let mapleader=" "

" Write and Quit
nmap <leader>w :w<CR>
nmap <leader>q :q<CR>

" Move in buffers
nnoremap <leader>l :bnext<CR>
nnoremap <leader>h :bprevious<CR>
nnoremap <leader>bd :bdelete<CR>

" NerdTree
nmap <leader>nt :NERDTreeFind<CR>

" Prettier
nmap <leader>p :Prettier<CR>

" FZF
nmap <leader>f :FZF<CR>
